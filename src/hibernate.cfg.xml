<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.username">
			root
		</property>

		<property name="hibernate.connection.password">
		</property>

		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/data
		</property>

		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>

		<mapping resource="com/vo/User.hbm.xml"/>
		<mapping resource="com/vo/Classroom.hbm.xml"/>
		<mapping resource="com/vo/Course.hbm.xml" />
		<mapping resource="com/vo/Exam_result.hbm.xml"/>
		<mapping resource="com/vo/Exam.hbm.xml"/>
		<mapping resource="com/vo/Grade.hbm.xml"/>
		<mapping resource="com/vo/Parent.hbm.xml"/>
		<mapping resource="com/vo/Student.hbm.xml"/>
		<mapping resource="com/vo/Teacher.hbm.xml"/>


	</session-factory>
</hibernate-configuration>
